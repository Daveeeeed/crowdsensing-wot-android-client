<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/empty_divider_10dp_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingTop="24dp"
        android:showDividers="middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applyCampaignTitle"
            android:textAppearance="@style/TextAppearance.App.TitleLarge" />

        <LinearLayout
            android:id="@+id/autoBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:divider="@drawable/empty_divider_16dp_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="24dp"
            android:showDividers="middle">

            <RadioButton
                android:id="@+id/autoRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultSubmissionTitle"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/defaultSubmissionSubtitle"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/autoPrefBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_divider_16dp_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="24dp"
            android:showDividers="middle">

            <RadioButton
                android:id="@+id/autoPrefRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preferencesSubmissionTitle"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preferencesSubmissionSubtitle"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intervalBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/empty_divider_16dp_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="24dp"
            android:showDividers="middle">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intervalSelectionTitle"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge" />

                <TextView
                    android:id="@+id/intervalLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intervalSelectionSubtitle"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/defaultIconContentDescription"
                app:srcCompat="@drawable/ic_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manualBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/empty_divider_16dp_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="24dp"
            android:showDividers="middle">

            <RadioButton
                android:id="@+id/manualRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manualSubmissionTitle"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manualSubmissionSubtitle"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/empty_divider_10dp_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:showDividers="middle">

        <Button
            android:id="@+id/applyCancelBtn"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#254B5B"
            android:text="@string/cancel"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/applyNextBtn"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#254B5B"
            android:text="@string/next"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>